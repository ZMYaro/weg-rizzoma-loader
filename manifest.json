{
	"manifest_version": 2,
	"name": "Wave Extensions Gallery Loader for Rizzoma",
	"version": "1.1.1",
	"description": "Allows Rizzoma users to add gadgets from the Wave Extensions Gallery.",
	
	"permissions": [
		"*://*.rizzoma.com/topic/*",
		"*://wavygallery.appspot.com/api/*",
		"storage"
	],
	
	"content_scripts": [{
		"matches": [
			"*://*.rizzoma.com/topic/*"
		],
		"js": ["rizzoma_weg.js"]
	}],
	
	"options_page": "options.html"
}
